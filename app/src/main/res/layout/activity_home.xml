<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marchika.enjoyjakarte.Home">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/fanta">

        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/info"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/btnKeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                   android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
            android:text="Keluar"
            android:textColor="@android:color/white" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wisata Jakarta"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinky">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@color/pinky">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <com.smarteist.autoimageslider.SliderLayout
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="230dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/wk"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:elevation="100dp"
                            android:scaleType="fitCenter"
                            app:cardBackgroundColor="#FFCCFFCC"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="100dp"
                            app:cardMaxElevation="100dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/kuliner" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignStart="@+id/wk"
                                android:layout_alignTop="@+id/wk"
                                android:layout_alignEnd="@+id/wk"
                                android:layout_alignBottom="@+id/wk"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:gravity="bottom"
                                android:paddingBottom="13.5sp"
                                android:text="Wisata Kuliner"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/wa"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/air"
                            app:cardBackgroundColor="#dc14"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="100dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/air" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignBottom="@id/wa"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="bottom"
                                android:text="Wisata Air"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/wb"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/belanja"
                            app:cardBackgroundColor="#FFFFFF99"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="100dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/belanja" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignBottom="@id/wb"
                                android:layout_centerInParent="true"
                                android:gravity="bottom"
                                android:paddingBottom="13.5sp"
                                android:text="Wisata Belanja"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/wh"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/education"
                            app:cardBackgroundColor="#FF9999FF"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="100dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/education" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:layout_alignStart="@+id/wh"
                                android:layout_alignBottom="@id/wh"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:gravity="bottom"
                                android:text="Wisata Hiburan \n dan Edukasi"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>